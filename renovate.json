{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["uv"]
    },
    {
      "matchPackageNames": ["python"],
      "rangeStrategy": "widen",
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Wednesday"]
  },
  "ignorePaths": [
    "Dockerfile"
  ],
  "schedule": [
    "* 1-5 * * *"
  ],
  "timezone": "Europe/Amsterdam",
  "updateNotScheduled": false
}
