{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["uv"]
    },
    {
      "matchPackageNames": ["python"],
      "rangeStrategy": "widen"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "ignorePaths": [
    "Dockerfile"
  ],
  "schedule": [
    "* 1-3 * * *"
  ],
  "timezone": "Europe/Amsterdam",
  "updateNotScheduled": false
}
